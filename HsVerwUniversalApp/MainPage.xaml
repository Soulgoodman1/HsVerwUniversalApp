<Page
    x:Class="HsVerwUniversalApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HsVerwUniversalApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock Text="Hausverwaltung" MaxHeight="80" FontSize="40" FontWeight="Light" TextTrimming="WordEllipsis" HorizontalAlignment="Center" Margin="0,0,0,20" />
            <CheckBox Name="ckb_internet"  IsEnabled="False" Content="Internet" IsChecked="{x:Null}" FontSize="20" HorizontalAlignment="Center" />
            <CheckBox Name="ckb_server"  IsEnabled="False" Content="Server" IsChecked="{x:Null}" FontSize="20" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</Page>
